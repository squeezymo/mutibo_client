<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="EditTextMutiboTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/mutibotheme_edit_text_holo_dark</item>
        <item name="android:textColor">@color/white_clr</item>
    </style>

    <style name="TextViewMutiboTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white_clr</item>
    </style>

    <style name="ButtonMutiboTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/mutibotheme_btn_default_holo_dark</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ImageButtonMutiboTheme" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/mutibotheme_btn_default_holo_dark</item>
    </style>

    <style name="ProgressBarMutiboTheme" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/mutibotheme_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/mutibotheme_progress_indeterminate_horizontal_holo_dark</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="RatingBarMutiboTheme" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mutibotheme_ratingbar_full_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/mutibotheme_ratingbar_full_holo_dark</item>
    </style>

    <style name="RatingBarBigMutiboTheme" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mutibotheme_ratingbar_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/mutibotheme_ratingbar_holo_dark</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <style name="RatingBarSmallMutiboTheme" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mutibotheme_ratingbar_small_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/mutibotheme_ratingbar_small_holo_dark</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ListViewMutiboTheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/mutibotheme_list_selector_holo_dark</item>
    </style>

    <style name="ListViewMutiboTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/mutibotheme_list_selector_holo_dark</item>
    </style>

    <style name="SpinnerItemMutiboTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TransparentProgressDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:bottomBright">@color/transparent_clr</item>
        <item name="android:bottomDark">@color/transparent_clr</item>
        <item name="android:bottomMedium">@color/transparent_clr</item>
        <item name="android:centerBright">@color/transparent_clr</item>
        <item name="android:centerDark">@color/transparent_clr</item>
        <item name="android:centerMedium">@color/transparent_clr</item>
        <item name="android:fullBright">@color/transparent_clr</item>
        <item name="android:fullDark">@color/transparent_clr</item>
        <item name="android:topBright">@color/transparent_clr</item>
        <item name="android:topDark">@color/transparent_clr</item>

        <item name="android:alertDialogStyle">@style/TransparentProgressDialogStyle</item>
        <item name="android:windowBackground">@color/transparent_clr</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
